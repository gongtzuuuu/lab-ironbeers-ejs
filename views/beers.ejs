<%- include('partials/nav.ejs') %>

<section id="beersArea">
    <% beersFromApi.forEach(eachBeerObj => { %>
        <div class="eachBeer" id="<% eachBeerObj.id %>">
            <img class="eachBeerImg" src="<%- eachBeerObj.image_url %>" alt="beer">
            <h3><%= eachBeerObj.name %></h3>
            <p><%= eachBeerObj.description %></p>
            <p><%= eachBeerObj.tagline %></p>
        </div>
    <% }) %>
</section>

